<table class='profile' summary='User profile information'>
  <tr>
    <td class='main'>
      <h1>
        <%= gravatar_image(@user) %>
        <%= @user.name %>
      </h1>
    </td>
    <td class='sidebar round'>
      <strong>Name</strong> <%= @user.name %> <br />
      <strong>Page</strong> <%= link_to(user_path(@user.id)) %>
    </td>
  </tr>
</table>
